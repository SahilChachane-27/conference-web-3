rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Publicly readable config, but only admins can write.
    match /config/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Publicly readable tickets, but only admins can write.
    match /tickets/{ticketId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
