{
  "entities": {
    "conferenceConfig": {
      "title": "Conference Config",
      "description": "General settings for the conference.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "The main title of the conference."
        },
        "subtitle": {
          "type": "string",
          "description": "The subtitle of the conference."
        },
        "date": {
          "type": "string",
          "description": "The dates of the conference."
        },
        "location": {
          "type": "string",
          "description": "The location of the conference."
        },
        "countdownTarget": {
          "type": "string",
          "description": "The target date for the countdown timer, e.g., 2026-03-06T09:00:00"
        }
      }
    },
    "ticket": {
      "title": "Ticket",
      "description": "A ticket type for the conference.",
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "category": {
          "type": "string"
        },
        "earlyBird": {
          "type": "object",
          "properties": {
            "usd": { "type": "string" },
            "inr": { "type": "string" }
          }
        },
        "lateBird": {
          "type": "object",
          "properties": {
            "usd": { "type": "string" },
            "inr": { "type": "string" }
          }
        },
        "features": {
            "type": "array",
            "items": { "type": "string" }
        },
        "featured": {
            "type": "boolean"
        }
      }
    }
  },
  "auth": {
    "providers": ["email-password"]
  },
  "firestore": {
    "/sustainTechConCollections/{docId}": {
      "schema": {
        "$ref": "#/entities/conferenceConfig"
      },
      "description": "Main document for conference configuration."
    },
    "/sustainTechConCollections/{docId}/tickets/{ticketId}": {
      "schema": {
        "$ref": "#/entities/ticket"
      },
      "description": "Conference ticket documents, nested under the main conference document."
    }
  }
}
